@* W.A.R.S *@
@{
    ViewData["Title"] = "Student Profile";
}
@model Student
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container ">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div style=" padding-top: 80px;" class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <img src="https://i.ibb.co/t2sNMz0/623-6236350-profile-icon-png-white-clipart-png-download-windows-removebg-preview.png"
                                    alt="623-6236350-profile-icon-png-white-clipart-png-download-windows-removebg-preview"
                                    border="0">
                                <h5 class="f-w-600">@Model.FirstName @Model.LastName</h5>
                                <p>Group number: <a style="color: white;"
                                        href="/groups/@Model.GroupId">@Model.group.GroupNumber</a></p>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400"><a href ="mailto:@Model.Email">@Model.Email</a></h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Bootcamp Staff</p>
                                        @{
                                            <h6 class="text-muted f-w-400">@ViewBag.InstructorWithTAs.Name</h6>
                                            <p class="m-b-10 f-w-600">TAs:</p>
                                            foreach (TA ta in ViewBag.InstructorWithTAs.TAs)
                                            {
                                                <h6 class="text-muted f-w-400">@ta.Name</h6>
                                            }
                                        }

                                    </div>
                                </div>
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Projects</h6>
                                <div class="row" style="margin-bottom: 50px;">
                                    @{

                                        foreach (Project p in ViewBag.AllProjects.CreatedProjects)
                                        {
                                            <ul>
                                                <li style="margin-left:35px">
                                                    <p style="margin-right: 40px;" class="text-muted f-w-400"><a
                                                        href="/projects/@p.ProjectId">@p.ProjectName</a></p>
                                                </li>
                                            </ul>
                                        }
                                    }
                                </div>
                            </div>
                            <ul class="social-link list-unstyled m-t-40 m-b-10">
                                <li><a href="@Model.linkedin" target="_blank" data-toggle="tooltip" data-placement="bottom" title=""
                                        data-original-title="facebook" data-abc="true"><img
                                            src="https://i.ibb.co/Fn8sck6/download.png" alt="download" width="30px">
                                    </a></li>
                                <li><a href="@Model.StudentGithub" target="_blank" data-toggle="tooltip" data-placement="bottom"
                                        title="" data-original-title="github" data-abc="true"><img
                                            src="https://i.ibb.co/6P4Hq60/Git-Hub-Mark.png" alt="Git-Hub-Mark"
                                            width="35px"></i></a></li>
                            </ul>
                            <div class="EditP">
                                @{
                                    if(Context.Session.GetInt32("uid") != null){
                                    
                                        if ((int)Context.Session.GetInt32("uid") == Model.StudentId)
                                        {

                                            <button class="btn"><a href="/students/edit/@Model.StudentId">Edit profile</button>
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>