@* W.A.R.S *@
@model LoginStudent


<div class="form form--login">
    <div style="margin-left: 20px;" class="form--heading">Welcome back! </div>
    <span style="margin-left: 50px;" class="text-danger" asp-validation-for="LoginEmail"></span>
    <span style="margin-left: 50px;" class="text-danger" asp-validation-for="LoginPassword"></span>

    <form asp-action="ProcessLogin" asp-controller="Student" method="POST">
        <div class="form-group">
            <label asp-for="LoginEmail"></label>
            <input style="margin-left:30px; width: 320px;" type="email" asp-for="LoginEmail" placeholder="Email">
        </div>

        <div class="form-group">
            <label asp-for="LoginPassword"></label>
            <input style="width: 320px;" type="password" asp-for="LoginPassword" placeholder="Password">
        </div>
        <button style="width: 200px; margin-left:70px;" class="button">Login</button>
    </form>
</div>