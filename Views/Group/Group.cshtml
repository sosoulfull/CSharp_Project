@* W.A.R.S *@
@{
    ViewData["Title"] = "Group Page";
}
@model Group
@{
    int? UserID = Context.Session.GetInt32("uid");
}
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container ">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div style=" padding-top: 40px;" class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <img src="https://i.ibb.co/nMfbjW1/group-removebg-preview-1.png" alt="group-removebg-preview-1" height="100px " width="1000px">
                                <h5 class="f-w-600">Group @Model.GroupNumber</h5>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                    <p class="m-b-10 f-w-600">Group members</p>

                                        @{
            
                                            foreach(Student s in Model.JoinedStudents)
                                            {
                                                <ul>
                                                    <li style = "margin-left:35px"><a href="/students/@s.StudentId">@s.FirstName @s.LastName</a></li>
                                                </ul>
                                            } 
            
                                        }
                                    </div>
                                </div>
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600" >Projects</h6>
                                <div class="row" style="margin-bottom: 50px;">
                                    @{
                                            foreach(Project p in Model.CreatedProjects)
                                            {
                                                <ul>
                                                <li style = "margin-left:35px"><p style="margin-right: 40px;" class="text-muted f-w-400"><a href="/projects/@p.ProjectId">@p.ProjectName</a></p></li>
                                            </ul> 
                                            }
                                        }
                                    </div>
                                    <div class="addP">
                                        @{
                                            if(@Model.JoinedStudents.Any(s => s.StudentId == UserID))
                                            {
                                                <p>Add a Project to Your Group!</p>
                                                <button class="btn"><a href="/project/create">New project</button>
                                            }
                                        }
                                    </div>
                                </div>
                                    </div>
                                </div>
                                
                                </div>
                            </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>